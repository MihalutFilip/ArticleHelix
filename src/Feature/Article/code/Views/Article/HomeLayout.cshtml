        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap-theme.min.css"> -->
        <link rel="stylesheet" type="text/css" href="@cssUrl">
        <title>Sitecore Powered Blog</title>
        <style>
            .main-search {
                width: 50%;
                margin: 50px auto;
            }
            
            .has-search .form-control {
                padding-left: 2.375rem;
            }

            .has-search .form-control-feedback {
                position: absolute;
                z-index: 2;
                display: block;
                width: 2.375rem;
                height: 2.375rem;
                line-height: 2.375rem;
                text-align: center;
                pointer-events: none;
                color: #aaa;
            }  
 
            .blog-post-card {
                background: black;
            }

            .blog-post-card img {
                width: 100%;
                height: 100%;
            } 
        </style>
        <script>
            function search() {
                var titles = Array.from(document.getElementsByClassName("card-title"));
                var searchValue = document.getElementById("search-text").value;

                titles.forEach(title => {
                    var titleValue = title.innerText;
                    var containerParent = title.parentNode.parentNode;
                    console.log(searchValue, titleValue, searchValue.includes(titleValue))
                    if(titleValue.includes(searchValue) || searchValue == "")
                        containerParent.style.display = "flex";
                    else 
                        containerParent.style.display = "none";
                });
            }
        </script>

    </head>
    <body style="background: black;">
        <header>
            @Html.Sitecore().Placeholder("header")
        </header>
       <main role="main" class="container blog-post-detail">
            <div class="main-search">
                <div class="input-group">
                <input id="search-text" type="text" class="form-control" placeholder="Search this blog">
                <div class="input-group-append">
            
                <button type="button" class="btn btn-dark" onclick="search()">Search</button>
                
                </div>
            </div>
        </div>
        <div id="blog-list" class="row">
      <div  class="blog-post-card card col-lg-4 col-md-6">
